<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <com.start_up.dev.apilinkus.Tool.LockableScrollView
        android:id="@+id/send_moment_scroll_image_displayed"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">
    <android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/drawer_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                tools:openDrawer="start">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/send_moment_image_displayed"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:background="@drawable/profile_background_image"
                            android:scaleType="matrix"/>


                    </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/send_moment_pictures"
                        android:scrollbars="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:numColumns="auto_fit"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="0dp"
                    android:layout_gravity="bottom|end"
                    android:orientation="horizontal">

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/send_moment_current_chosen_friend_list"
                        android:scrollbars="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:numColumns="auto_fit"/>

                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginTop="5dp"
                    android:background="@color/red"/>
                <EditText
                    android:id="@+id/send_moment_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:layout_margin="5dp"
                    android:padding="25dp"
                    android:imeOptions="flagNoExtractUi"
                    android:background="@drawable/moment_description"
                    android:drawablePadding="20dp"
                    android:paddingStart="40dp"
                    android:paddingLeft="40dp"
                    android:paddingEnd="100dp"
                    android:paddingRight="100dp"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:minHeight="100dp"
                    android:hint="@string/moment_description"
                    android:textColorHint="@color/tw__medium_gray"
                    android:textColor="@color/dark_grey"
                    android:inputType="textCapSentences|textCapWords|textMultiLine"/>

            </LinearLayout>



    </android.support.design.widget.CoordinatorLayout>
    </com.start_up.dev.apilinkus.Tool.LockableScrollView>
    <android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:id="@+id/send_moment_button_send"
        tools:context="com.start_up.dev.apilinkus.SendMomentActivity">


        <android.support.design.widget.FloatingActionButton
            android:id="@+id/send_gallery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            app:backgroundTint="@color/red"
            android:layout_margin="@dimen/fab_margin"
            app:srcCompat="@android:drawable/ic_menu_send" />
    </android.support.design.widget.CoordinatorLayout>
</RelativeLayout>